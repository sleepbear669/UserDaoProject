<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="userDao" class="gom.cave.sleep.UserDao">
        <property name="jdbcContext" ref="jdbcContext"/>
    </bean>

    <bean id="jdbcContext" class="gom.cave.sleep.JdbcContext">
        <property name="connectionMaker" ref="SimpleConnectionMaker"/>
    </bean>

    <bean id="SimpleConnectionMaker" class="gom.cave.sleep.SimpleConnectionMaker"/>
</beans>